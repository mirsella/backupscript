{
  "d": [
		"[[ $(hostname) = predator && -z $ignorehostname ]] || { echo wrong hostname; exit; }",
    "cd ~/.config/backupscript/dotfiles.git",
    "gitF checkout master || exit",
    "rm -rf .config etc boot .ssh",
    "mkdir -p .config/npm etc/{ssh,systemd/system} boot/grub .ssh",
    "cp ../config.json .",

    "cp ~/.ssh/config .ssh",
    "cp /boot/grub/custom.cfg boot/grub",
    "rsync -a --exclude-from ~/.config/backupscript/.gitignore ~/.config/{vim,zsh,keebie,autostart-scripts,wget,python,yakuakerc,dolphinrc,konsolerc,user-dirs.dirs} .config",
    "cp -r ~/.config/npm/npmrc .config/npm/",
    "cp /etc/{fstab,pacman.conf} etc",
    "cp /etc/ssh/{ssh,sshd}_config etc/ssh",
    "cp /etc/systemd/system/undervolt.service etc/systemd/system",
    "gitF A commit push"
  ],
  "u": [
		"[[ $(hostname) = unowhy ]] || { echo wrong hostname; exit; }",
    "cd ~/.config/backupscript/dotfiles.git",
    "gitF checkout unowhy || exit",
    "rm -rf .config etc boot .ssh",
    "mkdir -p .config/npm etc/{ssh,systemd/system} boot/grub .ssh",
    "cp ../config.json .",

    "cp ~/.ssh/config .ssh",
    "cp /boot/grub/custom.cfg boot/grub",
    "rsync -a --exclude-from ~/.config/backupscript/.gitignore ~/.config/{vim,zsh,autostart-scripts,wget,python,yakuakerc,dolphinrc,konsolerc,user-dirs.dirs} .config",
    "cp -r ~/.config/npm/npmrc .config/npm/",
    "cp /etc/{fstab,pacman.conf} etc",
    "cp /etc/ssh/{ssh,sshd}_config etc/ssh",
    "cp /etc/systemd/system/undervolt.service etc/systemd/system",
    "gitF A commit push"
  ],
  "r": [
    "[[ $(hostname) = rpi && -z $ignorehostname ]] || { echo wrong hostname; exit; }",
    "cd ~/.config/backupscript/dotfiles.git",
    "gitF checkout rpi || exit",
    "rm -rf www etc/ssh .config .ssh",
    "mkdir -p etc/systemd/system .config/npm .ssh",
    "cp ../config.json .",

    "cp ~/.ssh/config .ssh/",
    "cp -r /etc/{nginx,fstab} etc",
    "cp -r /hdd/www .",
    "cp /etc/systemd/system/{gitea,requestbin,updatefreedns,wssh,novnc}.service etc/systemd/system",
    "rsync -a --exclude-from ~/.config/backupscript/.gitignore ~/.config/{vim,zsh,wget,python,python} .config",
    "cp -r ~/.config/npm/npmrc .config/npm/",
    "cp /etc/ssh/{ssh,sshd}_config etc/ssh",
    "gitF A commit push"
  ],
  "t": [
    "echo termux",
    "echo ~s ~r"
    ],
  "s": [
    "cd ~/.config/backupscript",
    "gitF A commit push"
    ],
    "update": {
      "d": [
        "git clone https://github.com/mirsella/dotfiles /tmp/dotfiles",
        "cd /tmp/dotfiles; git checkout ${gitF_branch:-master}; git pull",
        "cp -r .config/vim/vimrc ~/.config/vim",
        "rsync -a --exclude=$(hostname) .config/zsh ~/.config",
        "cp -r .config/zsh/lib/zprofile.zsh ~/.config/zsh/lib/",
        "# source ~/.config/zsh/.zshrc"
      ],
      "s": [
        "cd ~/.config/backupscript",
        "export gitF_commitmessage='backup script before update.s'",
        "gitF A commit",
        "cp config.json config.json.bak",
        "git pull"
      ]
    },
    "install": {
      "script": [
        "rm -rf ~/.config/backupscript",
        "git clone git@github.com:mirsella/backupscript ~/.config/backupscript",
        "git clone git@github.com:mirsella/dotfiles ~/.config/backupscript/dotfiles.git",
        "sudo ln -s ~/.config/backupscript/backupscript.sh /usr/bin/b"
      ],
      "dotfiles" : [
        "rm -rf ~/.cache/dotfiles.git",
        "mv ~/.config/backupscript/dotfiles.git ~/.cache/",
        "git clone git@github.com/mirsella/dotfiles ~/.config/backupscript/dotfiles.git"
      ]
    }
}

