{
  "d": [
		"[[ $(hostname) = predator && -z $ignorehostname ]] || { echo wrong hostname; exit; }",
    "cd ~/.config/backupscript/dotfiles.git",
    "git checkout predator || exit",
    "rm -rf .config etc boot .ssh",
    "mkdir -p .config/{npm,oni2} etc/{ssh,systemd/system} boot/grub .ssh",
    "cp ../config.json .",

    "cp ~/.ssh/config .ssh",
    "cp /boot/grub/custom.cfg boot/grub",
    "rsync -a --exclude-from ~/.config/backupscript/.gitignore ~/.config/{zsh,nvim,keebie,autostart-scripts,wget,python,yakuakerc,dolphinrc,konsolerc,user-dirs.dirs} .config",
    "cp -r ~/.config/npm/npmrc .config/npm/",
    "cp /etc/{fstab,pacman.conf} etc",
    "cp /etc/ssh/{ssh,sshd}_config etc/ssh",
    "cp ~/.config/oni2/{vimrc,configuration.json,keybindings.json} .config/oni2",
    "cp /etc/systemd/system/{undervolt,vnc,dotfiles}.service etc/systemd/system",
    "git add -A",
    "bcommit",
    "git push origin predator"
  ],
  "u": [
		"[[ $(hostname) = unowhy && -z $ignorehostname ]] || { echo wrong hostname; exit; }",
    "cd ~/.config/backupscript/dotfiles.git",
    "git checkout unowhy || exit",
    "rm -rf .config etc boot .ssh",
    "mkdir -p .config/npm etc/{ssh,systemd/system} boot/grub .ssh",
    "cp ../config.json .",

    "cp ~/.ssh/config .ssh",
    "cp /boot/grub/custom.cfg boot/grub",
    "rsync -a --exclude-from ~/.config/backupscript/.gitignore ~/.config/{zsh,nvim,autostart-scripts,wget,python,yakuakerc,dolphinrc,konsolerc,user-dirs.dirs} .config",
    "cp -r ~/.config/npm/npmrc .config/npm/",
    "cp /etc/{fstab,pacman.conf} etc",
    "cp /etc/ssh/{ssh,sshd}_config etc/ssh",
    "cp /etc/systemd/system/dotfiles.service etc/systemd/system",
    "git add -A",
    "bcommit",
    "git push origin unowhy"
  ],
  "r": [
    "[[ $(hostname) = rpi && -z $ignorehostname ]] || { echo wrong hostname; exit; }",
    "cd ~/.config/backupscript/dotfiles.git",
    "git checkout rpi || exit",
    "rm -rf www etc/ssh .config .ssh",
    "mkdir -p .config/npm etc/{ssh,systemd/system} boot/grub .ssh",
    "cp ../config.json .",

    "cp ~/.ssh/config .ssh/",
    "cp -r /etc/{nginx,fstab} etc",
    "cp -r /hdd/www .",
    "cp /etc/systemd/system/{gitea,requestbin,updatefreedns,wssh,novnc,dotfiles}.service etc/systemd/system",
    "rsync -a --exclude-from ~/.config/backupscript/.gitignore ~/.config/{zsh,nvim,wget,python,python} .config",
    "cp -r ~/.config/npm/npmrc .config/npm/",
    "cp /etc/ssh/{ssh,sshd}_config etc/ssh",
    "git add -A",
    "bcommit",
    "git push origin rpi"
  ],
  "t": [
		"[[ -d ~/.termux && -z $ignorehostname ]] || { echo wrong hostname; exit; }",
    "cd ~/.config/backupscript/dotfiles.git",
    "git checkout termux || exit",
    "rm -rf .config etc .ssh",
    "mkdir -p .config/npm etc/{ssh,systemd/system} boot/grub .ssh",
    "cp ../config.json .",

    "cp ~/.ssh/config .ssh",
    "rsync -a --exclude-from ~/.config/backupscript/.gitignore ~/.config/{zsh,nvim,wget,python} .config",
    "cp -r ~/.config/npm/npmrc .config/npm/",
    "cp ~/../usr/etc/ssh/{ssh,sshd}_config etc/ssh",
    "cp -r ~/{.shortcuts,.termux} .",
    "git add -A",
    "bcommit",
    "git push origin termux"
    ],
  "s": [
    "cd ~/.config/backupscript",
    "git add -A",
    "bcommit",
    "git push"
    ],
    "up": {
      "d": [
        "[[ -d ${TMPDIR:-/tmp}/dotfiles ]] || git clone -q git@github.com:mirsella/dotfiles ${TMPDIR:-/tmp}/dotfiles",
        "cd ${TMPDIR:-/tmp}/dotfiles; git checkout -q ${branch:-predator}; git pull --all",
        "cp -r .config/{zsh,nvim} ~/.config",
        "for Branch in {predator,rpi,termux,unowhy}; do cp -r .config/zsh/lib/$Branch ~/.config/zsh/lib/; done"
      ],
      "s": [
        "cd ~/.config/backupscript",
        "git add -A",
        "git commit -m 'before update.s'",
        "git fetch",
        "git reset --hard FETCH_HEAD"
      ],
      "clearcommit": [
        "cd ~/.config/backupscript/dotfiles.git || exit",
        "git checkout -q ${branch:-$(hostname)} || exit",
        "git checkout --orphan ${branch:-$(hostname)}cleared",
        "git add -A",
        "bcommit 'cleared commit history'",
        "git branch -D ${branch:-$(hostname)}",
        "git branch -M ${branch:-$(hostname)}cleared $(hostname)",
        "git push -f origin ${branch:-$(hostname)}"
      ]
    },
    "install": {
      "script": [
        "rm -rf ~/.config/backupscript",
        "git clone git@github.com:mirsella/backupscript ~/.config/backupscript",
        "git clone git@github.com:mirsella/dotfiles ~/.config/backupscript/dotfiles.git",
        "sudo ln -s ~/.config/backupscript/backupscript.sh /usr/bin/b"
      ],
      "dotfiles" : [
        "rm -rf ~/.cache/dotfiles.git",
        "mv ~/.config/backupscript/dotfiles.git ~/.cache/",
        "git clone git@github.com:mirsella/dotfiles ~/.config/backupscript/dotfiles.git"
      ]
    }
}

